---
import { ganadoresRifa } from "src/data/datosRifa";
---

<div class="w-4/5 mx-auto py-4">
    <h1
        id="tituloGanadores"
        class="text-5xl font-bold text-center color-randomizer"
    >
        GANADORES
    </h1>
    <div class="border rounded-2xl my-2 overflow-hidden">
        <div class="flex justify-between items-center border-b bg-slate-500">
            <span class="w-1/3 text-center text-2xl font-bold py-1">
                Numero</span
            >
            <a class="w-1/3 text-center text-2xl font-bold border-x py-1">
                Nombre</a
            >
            <span class="w-1/3 text-center text-2xl font-bold py-1">
                Premio
            </span>
        </div>
        {
            ganadoresRifa.map((ganador) => {
                return (
                    <div class="flex justify-between items-center border-b py-1">
                        <span class="w-1/3 text-center text-lg md:text-xl">
                            {ganador.numero}
                        </span>
                        <a
                            href={`https://www.instagram.com/${ganador.comprador.instagram}/`}
                            target="_blank"
                            class="w-1/3 text-center text-md md:text-xl hover:scale-95"
                        >
                            {ganador.comprador.nombre}
                        </a>
                        <span class="w-1/3 text-center text-md md:text-xl line-clamp-2">
                            {ganador.premio}
                        </span>
                    </div>
                );
            })
        }
    </div>
</div>
