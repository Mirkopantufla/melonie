---
import { premiosMelonie } from "../data/datosRifa.ts";
---

<div class="flex flex-col justify-center items-center my-5">
    <h2 class="text-3xl lg:text-5xl font-bold text-center my-5">Premios</h2>
    <div class="grid grid-cols-12">
      {
        premiosMelonie.map((premio) => {
          return (
            <div class="col-span-12 md:col-span-6 lg:col-span-4 2xl:col-span-3 text-center border border-white p-2 m-2 rounded-xl">
              <h2 class="text-black font-bold text-xl bg-white rounded-t-lg">
                {premio.premio}
                {premio.cantidad > 1 ? ` * ${premio.cantidad}` : ""}
              </h2>
              <p class="w-4/5 h-44 sm:h-44 flex justify-center items-center m-auto font-light text-lg">
                {premio.descripcion}
              </p>
              <span class="flex justify-center items-center font-bold text-xl">
                Gracias {premio.donador}
                <img class="ms-2 h-7 pt-1" src="/like.png" alt="" />
              </span>
            </div>
          );
        })
      }
    </div>
  </div>